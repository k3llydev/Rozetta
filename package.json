{
  "name": "@rozetta/discord-bot",
  "version": "0.0.0",
  "description": "A multipurpose discord bot.",
  "author": "k3llydev <https://k3lly.dev>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "setup": "npm ci && npm run database:setup && npm run docker:setup",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "postbuild": "gulp postbuild",
    "database:init": "prisma migrate dev --name=initial",
    "database:export-sql": "prisma migrate diff --from-empty --to-schema-datasource ./src/database/schema.prisma --script > ./.docker/mysql/data.sql",
    "database:setup": "prisma generate",
    "database:update": "prisma migrate dev",
    "docker:build": "docker compose up",
    "docker:setup": "gulp prepareDocker",
    "release": "gulp release",
    "start": "nest start",
    "start:watch": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/sharding",
    "run:prod": "TOTAL_SHARDS=5 node sharding",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@necord/localization": "^3.0.2",
    "@nestjs/cache-manager": "2.1.0",
    "@nestjs/common": "10.2.7",
    "@nestjs/config": "3.1.1",
    "@nestjs/core": "10.2.7",
    "@nestjs/microservices": "10.2.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "10.2.7",
    "@nestjs/schedule": "3.0.4",
    "@nestjs/swagger": "7.1.13",
    "@nestjs/typeorm": "10.0.0",
    "@prisma/client": "5.7.0",
    "cache-manager": "5.2.4",
    "cache-manager-redis-store": "2.0.0",
    "discord.js": "14.11.0",
    "dotenv": "16.3.1",
    "moment": "2.29.4",
    "necord": "6.1.7",
    "nest-winston": "1.9.4",
    "nestjs-i18n": "10.2.6",
    "numeral": "2.0.6",
    "passport": "^0.7.0",
    "passport-discord": "^0.1.4",
    "passport-local": "^1.0.0",
    "pg": "8.11.1",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "typeorm": "0.3.17",
    "winston": "3.11.0"
  },
  "devDependencies": {
    "@nestjs/cli": "10.1.18",
    "@nestjs/schematics": "10.0.2",
    "@nestjs/testing": "10.2.7",
    "@types/cache-manager-redis-store": "2.0.2",
    "@types/conventional-changelog": "3.1.3",
    "@types/conventional-recommended-bump": "9.0.1",
    "@types/ejs": "3.1.3",
    "@types/express": "4.17.13",
    "@types/gulp": "4.0.14",
    "@types/jest": "28.1.8",
    "@types/node": "16.0.0",
    "@types/numeral": "2.0.3",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.0.0",
    "@typescript-eslint/parser": "5.0.0",
    "conventional-changelog": "5.1.0",
    "conventional-changelog-cli": "4.1.0",
    "conventional-recommended-bump": "9.0.0",
    "ejs": "3.1.9",
    "eslint": "8.0.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "glob": "^10.3.12",
    "gulp": "4.0.2",
    "jest": "28.1.3",
    "prettier": "2.3.2",
    "prisma": "5.7.0",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "28.0.8",
    "ts-loader": "9.2.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.0",
    "typescript": "5.2.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/"
    ]
  },
  "prisma": {
    "schema": "./src/database/schema.prisma",
    "seed": "gulp databaseSeed"
  }
}
